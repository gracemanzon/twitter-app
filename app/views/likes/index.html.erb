<h1 align="center"> Liked Tweets </h1>


<div class="container-fluid">
<% current_user.likes.each do |tweet| %>
<li class="list-group-item" style="margin: 50px 200px;">
              <div class="media">
                <div class="media-left">
                    <i></i>
                  </a>
                </div>
                <div class="media-body">
                  <%# <small class="text-muted pull-right">Just now</small> %>
                    <div style="height: 100px;">
<img src="<%= tweet.tweet.user.image_url%>"
            style="width: 100px; height: 100px; border-radius: 50%;"
            height="70"
            align="right"
          >
          </div>
          <div>
          <h5 align="Right" style="padding-right: 20px;"> <a href="profile/<%= tweet.tweet.user.id %>"><%= tweet.tweet.user.name %></a></h5>
          </div>
          <div style="text-align: left; margin-left:auto; margin-right: auto; width: 600px;">
                  <h4 class="media-heading"></h4>
                  <div>
                  <h3>
                    <%= tweet.tweet.title %>
                  </h3>
                  <div style="margin-bottom: 30px;">
                    <%= tweet.tweet.body %>
                  </div>
                  <div>
                    <img src="<%= tweet.tweet.image_url %>" alt="..." style="width: 600px;">
                  </div>
                  <div style="padding-top: 30px;">
                      <div style="font-size: 20px;">
                      <% if tweet.tweet.likes.count == 1 %>
                      <%= tweet.tweet.likes.count %> Like
                      <% else %>
                      <% tweet.tweet.likes.count %> Likes
                      <% end %>
                  </div>
                  </div>
                  <div>
                    <% like = current_user.likes.find_by(tweet: tweet) if !current_user.nil? %>
                    <% if like.nil? %>
                      <form action="/likes" method="post">
                        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                        <input type="hidden" name="like[tweet_id]" value="<%= tweet.id %>">
                        <input type="hidden" name="like[tweet_type]" value="<%= tweet.class.to_s %>">
                        <input type="submit" value="Like" class="btn btn-outline-success">
                      </form>
                    <% else %>
                      <form action="<%= like_path(like) %>" method="post">
                        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="submit" value="Unlike" class="btn btn-outline-success">
                      </form>
                    <% end %>
                    <div style="margin-top: 20px;">
                        <% if tweet.tweet.user_id == current_user.id %>
                        <a href="<%= edit_tweet_path(tweet)%>" class="btn btn-outline-success">Edit</a>
                        <%= link_to "Delete", tweet_path(tweet), data: {
                          turbo_method: :delete,
                          turbo_confirm: "Are you sure?"
                        }, class: "btn btn-outline-success" %>
                        <% end %>
                    </div>
            </div>
      </div>
</div>
</div>

<% end %>
