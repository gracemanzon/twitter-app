
<div class="card" style="width: 20rem; text-align: center; margin-left: 30%; background-color: #20c997;"> 
 <div class="card-body">
    <h5 class="card-title">Edit Tweet</h5>
    
<%= form_with model: @tweet do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>
  <div>
    <%= form.label :image_url %>
    <%= form.text_field :image_url %>
  </div>
  <div>
    <%= form.submit %>
 </div>
<% end%>

</div>
</div>
</div>
